
@import 'yeticss'

body
  border: 10px solid $gray-lighter
  padding: 30px;

header
  margin-top: 30px

.Page
  width: 900px

// .Page-title
.Logo
  display: block;
  width: 200px;
  height: 42px;

.Card
  width: 200px
  margin: 0 25px 25px 0

.Card-thumbnail
  width: 200px
  height 200px
  background: transparent
  border: 2px solid #e6eaed;
  border-radius: 2px

  &:hover
    background: rgba(230, 234, 237, 0.21);

  img
    display: block
    width: 100%
    height: 100%

.Card-label
  width: 100%
  text-align: center
  color: #b7c0c3
  margin: 5px 0 10px


.EmptyState
  width: 100%
  margin: 15px 0
  // text-align: center


.Input-jumbo
  padding: 20px
  width: 500px
  font-size: 20px
  margin-bottom: 15px

.Button-jumbo
  border-radius: 0
  padding: 20px
  font-size: 20px

.Breadcrumb-item
  font-size: 12px
  padding: 0 10px
